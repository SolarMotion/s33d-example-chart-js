@{
    var chartData = new int[2] { 92, 8 };
}

<h2>Pie Chart</h2>

<canvas id="myChart" style="height:190px;width: content-box;"></canvas>

<br /><br /><br />

@section Scripts {
    <script>
        $(document).ready(function () {
            var myArray = [];
            @foreach (var d in chartData)
        {
            @:myArray.push("@d");
                            }

            var ctx = document.getElementById("myChart");
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    datasets: [{
                        data: myArray,
                        backgroundColor: [
                          window.chartColors.green, window.chartColors.red,
                        ],
                    }],

                    // These labels appear in the legend and in the tooltips when hovering different arcs
                    labels: [
                        'Delivery < SLA',
                        'Delivery > SLA'
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Delivery OTIF Prev. Week - 66 Deliveries'
                    }
                }
            });
        });
    </script>
}
